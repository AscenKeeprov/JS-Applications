<div id="addMovie">
	<h1>Create movie</h1>
	<form action="#/movie/add" method="POST">
		<label>Title</label>
		<input type="text" name="title" id="createTitle" required="required" />
		<label>Image Url</label>
		<input type="text" name="imageUrl" id="createImage" required="required" />
		<label>Description</label>
		<textarea type="text" name="description" id="createDescription" required="required"></textarea>
		<label>Genres</label>
		<input type="text" name="genres" id="createGenres" min="0" required="required" />
		<label>Available Tickets</label>
		<input type="number" name="tickets" id="createTickets" required="required" />
		<input type="submit" value="Create" />
	</form>
</div>