<div id="editMovie">
	<h1>Edit movie</h1>
	<form action="#/movie/edit/{{movie._id}}" method="POST">
		<label>Title</label>
		<input type="text" name="title" value="{{movie.title}}" id="editTitle" required="required" />
		<label>Image Url</label>
		<input type="text" name="imageUrl" id="editImage" value="{{movie.imageUrl}}" required="required" />
		<label>Description</label>
		<textarea type="text" id="editDescription" name="description">{{movie.description}}</textarea>
		<label>Genres</label>
		<input type="text" name="genres" value="{{movie.genres}}" id="editGenres" required="required" />
		<label>Available Tickets</label>
		<input type="number" name="tickets" value="{{movie.tickets}}" id="editTickets" min="0" required="required" />
		<input type="submit" value="Edit">
	</form>
</div>