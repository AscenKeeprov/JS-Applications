<section class="detailsMyPet">
	<h3>{{pet.name}}</h3>
	<p>Pet counter: <i class="fas fa-heart"></i> {{pet.likes}}</p>
	<p class="img"><img src="{{pet.imageURL}}"></p>
	<form action="#/pets/details/{{pet._id}}" method="POST">
		<textarea type="text" name="description" required="required">{{pet.description}}</textarea>
		<button class="button"> Save</button>
	</form>
</section>